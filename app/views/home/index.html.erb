<div id="twitter-box">
  <%getting_tweets%>
  <%@tweets.each do |tweet|%>
  <a href="<%=tweet[:uri]%>">
    <div class="tweet">
        <div class="tweet-user-info">
          <span class="tweet-user"><%= tweet[:username] %></span>
          <a href="https://www.twitter.com/<%=tweet[:screen_name]%>"><span class="tweet-screen-name">@<%= tweet[:screen_name] %></span></a>
        </div>
        <span class="tweet-text"><%= tweet[:text] %></span>
        <div class="tweet-info">
          <span class="tweet-retweet-count"> <%= link_to image_tag('retweet.png', height: 10, alt: "retweet"), root_path, class: 'twitter-retweet' %><%= tweet[:retweets] %></span>
          <span class="tweet-favourite-count"> <%= link_to image_tag('like.png', height: 10, alt: "like"), root_path, class: 'twitter-like' %> <%= tweet[:favorites] %></span>
          <span class="tweet-created-at"><%= tweet[:created_at]%></span>
        </div>
    </div>
  </a>
  <%end%>
</div>

<div id="pledge-bar" class="center">
    <span>
      <%= Pledge.counter %> people have pledged to help end street harassment.
      <strong><%= link_to "Will you?", new_pledge_path %></strong>
    </span>
</div>

<div id="map" style="width: 100%">
</div>

<div class="fixed-action-btn" style="bottom: 24px; right: 24px;">
  <a class="btn-floating btn-large waves-effect waves-light red" href='/reports/new'>
    <i class="material-icons">add</i>
  </a>
</div>


<script>
  var events = <%= Report.latest_for_map.to_json.html_safe %>;
</script>

